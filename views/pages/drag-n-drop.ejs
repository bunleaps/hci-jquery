<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head', {title: "Drag-n-Drop"}); %>
  </head>
  <body>
    <h1>Drag-n-Drop</h1>

    <div class="tasks">
      <div class="section">
        <h3>Todo</h3>
        <div id="todo">
          <div class="draggable">Some Task 1</div>
        </div>
      </div>
      <div class="section">
        <h3>In-Progress</h3>
        <div id="in-progress">
          <div class="draggable">Some Task 2</div>
        </div>
      </div>
      <div class="section">
        <h3>Completed</h3>
        <div id="completed">
          <div class="draggable">Some Task 3</div>
        </div>
      </div>
    </div>

    <script>
      $(document).ready(function () {
        $("#todo, #in-progress, #completed").sortable();

        $(".draggable").draggable({
          connectToSortable: "#todo, #in-progress, #completed",
          helper: "original",
        });
      });
    </script>

    <style>
      h1 {
        padding: 20px;
        margin: 0;
        text-align: center;
      }

      .tasks {
        padding: 20px;
        gap: 10px;
        display: flex;
        justify-content: space-between;
      }

      .section {
        width: 300px;
        height: 400px;
        border: 1px solid black;
        padding: 10px;
      }

      h3 {
        padding: 0;
        margin: 0;
      }

      #todo,
      #in-progress,
      #completed {
        height: 350px;
      }

      .draggable {
        margin-top: 5px;
        padding: 5px;
        cursor: move;
        text-align: center;
        border: 1px dashed black;
      }
    </style>
  </body>
</html>
